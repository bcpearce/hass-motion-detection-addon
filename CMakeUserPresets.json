{
    "version": 10,
    "configurePresets": [
        {
            "name": "Release",
            "inherits": "vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "binaryDir": "${sourceDir}/build/Release",
            "environment": {
                "VCPKG_ROOT": "/home/bpearce/vcpkg",
                "PATH": "/usr/bin/ninja/bin:$penv{PATH}",
                "VCPKG_BINARY_SOURCES": "clear;files,/home/bpearce/vcpkg/binary-cache,readwrite"
            }
        },
        {
            "name": "Debug",
            "inherits": "vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "binaryDir": "${sourceDir}/build/Debug",
            "environment": {
                "VCPKG_ROOT": "/home/bpearce/vcpkg",
                "PATH": "/usr/bin/ninja/bin:$penv{PATH}",
                "VCPKG_BINARY_SOURCES": "clear;files,/home/bpearce/vcpkg/binary-cache,readwrite"
            }
        }
    ]
}